@page
@model WarehouseManagement.Client.Pages.Shipments.IndexModel
@{
    ViewData["Title"] = "Документы отгрузки";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Документы отгрузки</h2>
    <a asp-page="./Create" class="btn btn-primary">Создать документ отгрузки</a>
</div>

@if (Model.Shipments.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Дата</th>
                    <th>Клиент</th>
                    <th>Статус</th>
                    <th>Количество позиций</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shipment in Model.Shipments)
                {
                    <tr>
                        <td>@shipment.Number</td>
                        <td>@shipment.Date.ToString("dd.MM.yyyy")</td>
                        <td>@shipment.ClientName</td>
                        <td>
                            @if (shipment.Status == 1)
                            {
                                <span class="badge bg-warning">Черновик</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Подписан</span>
                            }
                        </td>
                        <td>@shipment.Resources.Count</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Details" asp-route-id="@shipment.Id" class="btn btn-sm btn-outline-info">Просмотр</a>
                                @if (shipment.Status == 1)
                                {
                                    <a asp-page="./Edit" asp-route-id="@shipment.Id" class="btn btn-sm btn-outline-primary">Изменить</a>
                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="approveShipment(@shipment.Id)">Подписать</button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-warning" onclick="revokeShipment(@shipment.Id)">Отозвать</button>
                                }
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteShipment(@shipment.Id)">Удалить</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Документы отгрузки не найдены</h4>
        <p>Создайте первый документ отгрузки, нажав кнопку "Создать документ отгрузки".</p>
    </div>
}