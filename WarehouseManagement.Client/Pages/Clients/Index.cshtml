@page
@model WarehouseManagement.Client.Pages.Clients.IndexModel
@{
    ViewData["Title"] = "Клиенты";
}

<form method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Клиенты</h2>
    <a asp-page="./Create" class="btn btn-primary">Добавить клиента</a>
</div>

@if (Model.Clients.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Наименование</th>
                    <th>Адрес</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model.Clients)
                {
                    <tr>
                        <td>@client.Id</td>
                        <td>@client.Name</td>
                        <td>@client.Address</td>
                        <td>
                            @if (client.Status == 1)
                            {
                                <span class="badge bg-success">Активный</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Архивный</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" asp-route-id="@client.Id" class="btn btn-sm btn-outline-primary">Изменить</a>
                                @if (client.Status == 1)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-warning" onclick="archiveClient(@client.Id)">Архивировать</button>
                                }
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteClient(@client.Id)">Удалить</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Клиенты не найдены</h4>
        <p>Добавьте первого клиента, нажав кнопку "Добавить клиента".</p>
    </div>
}

@section Scripts {
    <script>
        async function archiveClient(id) {
            if (confirm('Вы уверены, что хотите архивировать этого клиента?')) {
                try {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/Clients?handler=Archive&id=${id}`;
                    
                    const token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = token.value;
                        form.appendChild(tokenInput);
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                } catch (error) {
                    alert('Ошибка при архивировании клиента');
                }
            }
        }

        async function deleteClient(id) {
            if (confirm('Вы уверены, что хотите удалить этого клиента?')) {
                try {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/Clients?handler=Delete&id=${id}`;
                    
                    const token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = token.value;
                        form.appendChild(tokenInput);
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                } catch (error) {
                    alert('Ошибка при удалении клиента');
                }
            }
        }
    </script>
}