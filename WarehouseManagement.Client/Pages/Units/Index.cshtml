@page
@model WarehouseManagement.Client.Pages.Units.IndexModel
@{
    ViewData["Title"] = "Единицы измерения";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Единицы измерения</h2>
    <a asp-page="./Create" class="btn btn-primary">Добавить единицу измерения</a>
</div>

@if (Model.Units.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Наименование</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model.Units)
                {
                    <tr>
                        <td>@unit.Id</td>
                        <td>@unit.Name</td>
                        <td>
                            @if (unit.Status == 1)
                            {
                                <span class="badge bg-success">Активная</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Архивная</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" asp-route-id="@unit.Id" class="btn btn-sm btn-outline-primary">Изменить</a>
                                @if (unit.Status == 1)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-warning" onclick="archiveUnit(@unit.Id)">Архивировать</button>
                                }
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteUnit(@unit.Id)">Удалить</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Единицы измерения не найдены</h4>
        <p>Добавьте первую единицу измерения, нажав кнопку "Добавить единицу измерения".</p>
    </div>
}