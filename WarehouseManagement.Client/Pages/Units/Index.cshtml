@page
@model WarehouseManagement.Client.Pages.Units.IndexModel
@{
    ViewData["Title"] = "Единицы измерения";
}

<form method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Единицы измерения</h2>
    <a asp-page="./Create" class="btn btn-primary">Добавить единицу измерения</a>
</div>

@if (Model.Units.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Наименование</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model.Units)
                {
                    <tr>
                        <td>@unit.Id</td>
                        <td>@unit.Name</td>
                        <td>
                            @if (unit.Status == 1)
                            {
                                <span class="badge bg-success">Активная</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Архивная</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" asp-route-id="@unit.Id" class="btn btn-sm btn-outline-primary">Изменить</a>
                                @if (unit.Status == 1)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-warning" onclick="archiveUnit(@unit.Id)">Архивировать</button>
                                }
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteUnit(@unit.Id)">Удалить</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Единицы измерения не найдены</h4>
        <p>Добавьте первую единицу измерения, нажав кнопку "Добавить единицу измерения".</p>
    </div>
}

@section Scripts {
    <script>
        async function archiveUnit(id) {
            if (confirm('Вы уверены, что хотите архивировать эту единицу измерения?')) {
                try {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/Units?handler=Archive&id=${id}`;
                    
                    const token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = token.value;
                        form.appendChild(tokenInput);
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                } catch (error) {
                    alert('Ошибка при архивировании единицы измерения');
                }
            }
        }

        async function deleteUnit(id) {
            if (confirm('Вы уверены, что хотите удалить эту единицу измерения?')) {
                try {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/Units?handler=Delete&id=${id}`;
                    
                    const token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = token.value;
                        form.appendChild(tokenInput);
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                } catch (error) {
                    alert('Ошибка при удалении единицы измерения');
                }
            }
        }
    </script>
}