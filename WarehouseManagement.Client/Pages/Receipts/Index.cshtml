@page
@model WarehouseManagement.Client.Pages.Receipts.IndexModel
@{
    ViewData["Title"] = "Документы поступления";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Документы поступления</h2>
    <a asp-page="./Create" class="btn btn-primary">Создать документ поступления</a>
</div>

@if (Model.Receipts.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Дата</th>
                    <th>Количество позиций</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receipt in Model.Receipts)
                {
                    <tr>
                        <td>@receipt.Number</td>
                        <td>@receipt.Date.ToString("dd.MM.yyyy")</td>
                        <td>@receipt.Resources.Count</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Details" asp-route-id="@receipt.Id" class="btn btn-sm btn-outline-info">Просмотр</a>
                                <a asp-page="./Edit" asp-route-id="@receipt.Id" class="btn btn-sm btn-outline-primary">Изменить</a>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteReceipt(@receipt.Id)">Удалить</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Документы поступления не найдены</h4>
        <p>Создайте первый документ поступления, нажав кнопку "Создать документ поступления".</p>
    </div>
}